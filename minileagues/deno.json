{
  "name": "minileagues-scraper",
  "version": "1.0.0",
  "description": "A TypeScript web scraper built with Deno",
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "imports": {
    "@/": "./src/",
    "@types/": "./types/",
    "axios": "npm:axios@^1.11.0",
    "cheerio": "npm:cheerio@^1.1.2"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write src/main.ts",
    "start": "deno run --allow-net --allow-read --allow-write src/main.ts",
    "scrape": "deno run --allow-net --allow-read --allow-write src/main.ts",
    "example": "deno run --allow-net --allow-read --allow-write example.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/main.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
